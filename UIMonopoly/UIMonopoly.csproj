<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>MonopolyGuy.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
		<None Remove="Images\*.*" />
		<None Remove="Images\Board\*.*" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="Images\*.*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Images\Board\*.*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Client\Client.csproj" />
	  <ProjectReference Include="..\ServerConcurrent\ServerConcurrent.csproj" />
	</ItemGroup>

</Project>
